{
  "name": "chat-bot-openai",
  "version": "1.0.0",
  "description": "",
  "main": "./build/server.js",
  "engines": {
    "node": "18",
    "nvm": "9"
  },
  "scripts": {
    "pm2:start": "pm2 start npm --name=\"chat-bot-openai\" -- start",
    "pm2:restart": "pm2 restart \"chat-bot-openai\"",
    "pm2:delete": "pm2 delete \"chat-bot-openai\"",
    "start": "npm run build:clean && cross-env node --no-warnings ./build/server.js",
    "start:ts": "node --inspect -r ts-node/register -r tsconfig-paths/register ./src/server.ts",
    "dev": "nodemon --ext \"ts,js,json\" --ignore \"node_modules\" --exec npm -- run start:ts",
    "build": "npx tsc",
    "build:clean": "npm i && rimraf build && npx tsc",
    "lint": "eslint --fix . --ext .ts",
    "copy-env": "cp .env.sample .env"
  },
  "author": "Pulkit",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.10",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.1",
    "openai": "^4.20.0",
    "socket.io": "^4.7.2",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/lodash": "^4.14.189",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^8.27.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.2",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^5.0.3"
  },
  "_moduleAliases": {
    "@modules": "build/modules",
    "@models": "build/models",
    "@config": "build/core/config",
    "@core": "build/core",
    "@middlewares": "build/middlewares",
    "@helpers": "build/helpers"
  }
}
